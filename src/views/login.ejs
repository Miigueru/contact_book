<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead"><strong>Faça seu login ou crie uma conta abaixo</strong></p>

            <%- include('includes/messages'); %>
            <div class="row">
                <div class="col-lg my-3">
                    <h4>Crie sua conta</h4>
                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Seu e-mail</label>
                            <input type="email" class="form-control" name="email">
                            
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar conta</button>
                    </form>
                </div>
                <div class="col-lg my-3">
                    <h4>Faça seu login</h4>
                    <form class="form-login" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Seu e-mail</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>
